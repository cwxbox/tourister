/* miniprogram/pages/index/index.wxss */

page{
  background-color: #F0F0F0;
}


/* 盒子整体 */
.box {
  display:flex;
  justify-content: center;
  align-items: center;
  margin-top: 10px;
}

/* 内容盒子 */
.box-content{
  width: 350px;
  height: 220px;
  position: relative;
}

/* 图片 */
.img {
  width: 350px;
  height: 220px;
  position: relative;
  border-radius:5px;
}

/* 标题 */
.title {
  position: absolute;
  z-index: 1;
  left: 0;
  bottom: 0;
  width: 100%;
  color: #fff;
  height: 54px;
  line-height: 54px;
  overflow: hidden;
  margin-left:10px
}

/* 标题背景 */
.box-tiltle{
  position: absolute;
  z-index: 1;
  left: 0;
  bottom: 0;
  width: 100%;
  color: #fff;
  height: 54px;
  line-height: 54px;
  overflow: hidden;
  width: 350px;
  height: 55px;
  -webkit-border-bottom-left-radius:4px;
  -webkit-border-bottom-right-radius:4px;
  background: rgba(0, 0, 0, .7);
}

