.blog{
  padding: 10rpx;
  background-color: #fff;
  width: 720rpx;
}
.blog-title{
  display: flex;
}
.blog-portrait{
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
 margin-left: 10rpx;
}

page{
  background-color: #f1f1f1;
}
.blog-box{
  margin-top: 20rpx;
}

.blog-time{
  font-size: 24rpx;
  color: #939393;
}

.blog-content{
 
  margin: 10rpx 0;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.5;
  
}



.blog-img{
  display: flex;
  flex-wrap: wrap;
 
}


.blog-img .img{
  width: 230rpx;
  height: 230rpx;
  margin: 7rpx;
}


.blog-img .img:nth-child(3n){
  margin-right: 0;
}