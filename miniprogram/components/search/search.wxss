@import "iconfont.wxss";

.container{
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  position: relative;
  /*flex-direction: row;*/
}

.bar{
  flex: 1;
  height: 68rpx;
  font-size: 28rpx;
  border-radius: 50px;
  background-color: #f5f5f5;
  padding-left: 50rpx;
  margin-right: 10rpx;
}

.search{
  background-color: #d43c33;
  color: #fff;
  margin-left: 20rpx;
  font-size: 20rpx;
  line-height:40rpx;
  
  
}

.find{
  position: absolute;
  top:50%;
  transform: translate(12rpx,-50%);
  color: #9f9f9f;
  margin-right: 20rpx;
}