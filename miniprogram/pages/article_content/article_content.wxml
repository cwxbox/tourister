<view class="box" bindtap="goDetail_article" data-article="{{item._id}}"  wx:for="{{article}}">

<view class="box-content">
  <!-- 图片开始 -->
  <image class="img" src="{{item.title_img}}" />
  <!-- 图片结束 -->
  <view class="box-tiltle">
    <!-- 标题开始 -->
    <text class="title">{{item.title}}</text>
    <!-- 标题结束 -->
  </view>
</view>

</view>
