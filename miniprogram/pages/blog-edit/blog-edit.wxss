.container{
  padding: 20rpx;
}

.content{
  width: 100%;
  height: 360rpx;
  box-sizing: border-box;
}

.footer{
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: #f1f1f1;
}

.word-num{
  flex: 1;
  text-align: right;
  color: #474747;
  font-size: 32rpx;
  padding-right:20rpx ;
}


.send-btn{
  background: #d43c33;
  color: #fff;
  margin-right: 20rpx;
  
}

.image-list{
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
  margin-left: 30rpx;
}

.image-wrap{
  width: 220rpx;
  height: 220rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
  position: relative;
  overflow: hidden;
  text-align: center;
 
  
}

.icon-jiahao{
  position: absolute;
  top: 0;
  right: 0;
  width: 210rpx;
  height: 215rpx;
  color: rgba(100, 98, 98, 0.534);
  text-align: center;
  line-height: 210rpx;
  font-size: 38rpx;
  border-width: 2rpx;
  border-style: dashed;
  border-color: rgba(100, 98, 98, 0.534);
}

.image{
  width: 100%;
  height: 100%;
  
}

.icon-shanchu{
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: #000;
  opacity: 0.4;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 38rpx;
  font-weight: bolder;

  
}
